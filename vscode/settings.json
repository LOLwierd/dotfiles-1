{
    "workbench.colorTheme": "Horizon",
    "window.titleBarStyle": "custom",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.showWelcomeMessage": false,
    "workbench.startupEditor": "newUntitledFile",
    "terminal.integrated.rendererType": "dom",
    "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "markdown.preview.fontFamily": "'Fira Code', -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', 'Ubuntu', 'Droid Sans', sans-serif",
    "editor.fontLigatures": true,
    "editor.foldingStrategy": "indentation",
    "workbench.tree.indent": 12,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "prettier.tabWidth": 4,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 5,
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#3e3e3e"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.lineNumbers": "relative",
    "window.zoomLevel": 0.75,
    "javascript.suggest.completeFunctionCalls": true,
    "typescript.suggest.completeFunctionCalls": true,
    "files.associations": {
        "*.dockerignore": "ignore",
        "*.toml": "yaml"
    },
    "vim.hlsearch": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "'Fira Code'",
    "vim.easymotionMarkerYOffset": 3,
    "vim.easymotionMarkerHeight": 16,
    "vim.easymotionMarkerWidthPerChar": 10,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                " "
            ],
            "after": [
                "<leader>",
                "<leader>",
                "<leader>",
                "b",
                "d",
                "w"
            ]
        }
    ]
}
